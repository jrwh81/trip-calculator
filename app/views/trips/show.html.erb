<p id="notice"><%= notice %></p>

<h1>Trip: <%= @trip.name %></h1>

<p>
  <strong>Description:</strong>
  <%= @trip.description %>
</p>

<p>
  <strong>Total cost:</strong>
  $<%= @trip.total_cost %>
</p>

<p>
  <strong>Travelers:</strong><br />
  <% @trip.travelers.each do |traveler| %>
   <%= "#{traveler.user_name}" %><br />
  <% end %>
</p>

<p>
  <strong>Expenses:</strong><br />
  <% @trip.exspenses.each do |expense| %>
   <%= "Type: #{expense.name} - Cost:$#{expense.cost} - Paid By: #{Traveler.find(expense.traveler_id).user_name}" %><br />
  <% end %>
</p>

<%= link_to 'Add a Traveler', trips_path %> |
<%= link_to 'Add an Exspense', new_exspense_path(@trip) %> |
<%= link_to 'Edit', edit_trip_path(@trip) %> |
<%= link_to 'Back', trips_path %>
